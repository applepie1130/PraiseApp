						if ( confirm("즐겨찾기 해제하시겠습니까?") ) {
							var _target		= jQuery(e.target);
							var sClassNm	= _target.attr("class");
							var sSettingVal	= _target.attr("data-value");
							
							Controller.setAction("/saveFavorite");
							Controller.setParams({
